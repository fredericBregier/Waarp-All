  <rerrortasks>
    <tasks>
      <task>
        <type>LOG</type>
        <path>erreur</path>
        <delay>1</delay>
        <rank>0</rank>
      </task>
    </tasks>
  </rerrortasks>
  <serrortasks>
    <tasks>
      <task>
        <type>LOG</type>
        <path>erreur</path>
        <delay>1</delay>
        <rank>0</rank>
      </task>
    </tasks>
  </serrortasks>
  <sposttasks>
    <tasks>
    </tasks>
  </sposttasks>
  <spretasks>
    <tasks>
      <task>
        <type>S3GETDELETE</type>
        <path>-URL %s -accessKey accessKey -secretKey secretKey -bucketName
          bucket-test -sourceName %s -file #TRUEFULLPATH# -getTags key1
        </path>
        <delay/>
        <rank>0</rank>
      </task>
    </tasks>
  </spretasks>
</rule>