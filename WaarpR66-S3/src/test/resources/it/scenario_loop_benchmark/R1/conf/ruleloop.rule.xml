<rule>
  <idrule>loop</idrule>
  <mode>5</mode>
  <rpretasks>
    <tasks>
    </tasks>
  </rpretasks>
  <rposttasks>
    <tasks>
      <task>
        <type>S3PUT</type>
        <path>-URL %s -accessKey accessKey -secretKey secretKey -bucketName
          bucket-test -targetName %s -setTags key1:value1
        </path>
        <delay/>
        <rank>0</rank>
      </task>
      <task>
        <type>TRANSFER</type>
